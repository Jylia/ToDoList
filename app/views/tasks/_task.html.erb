<li id=task_<%= task.id %>>
    <div class="show">   
      <%= task.description %>
      <%= link_to (check_box_tag('completed', 'completed', task.done)), completed_path(task), :remote => true%>
      <%= task.date %>
      <div class="actions">
        <%= link_to 'Edit', edit_task_path(task), class: :edit, remote: true %>
        <%= link_to 'Destroy', task, :method => :delete, :confirm => 'Are you sure?', remote: true %>
      </div>
    </div>
  
    <div class="form", style="display: none">
 
	<%= render 'form', :@task => task %>
	
    </div> 
</li>
  
      
