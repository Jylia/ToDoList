<%= div_for task do %>
  <%= task.description %>
  <%= check_box_tag(:task, value = nil, checked = task.done) %>
  <%= task.date.to_formatted_s(:short) %>
  <div class="actions">
    <%= link_to 'Edit', edit_task_path(task), class: :edit %>
    <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete, :class => :delete, remote: true %>
  </div>
<% end %>

  
